{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ebb",
  "version": "../package.json",
  "identifier": "com.ebb.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Ebb",
        "width": 850,
        "height": 675,
        "minWidth": 850,
        "minHeight": 675,
        "hiddenTitle": true,
        "titleBarStyle": "Transparent",
        "backgroundColor": "#FCF8EDCC"
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["$ASSET/**", "$RESOURCE/**"]
        }
      }
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "shell": {
      "open": "^https?://.+|^ebb://.+|^spotify:.+"
    },
    "deep-link": {
      "desktop": {
        "schemes": ["ebb"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU5RjdFOTk2QjlCNzdBRUYKUldUdmVyZTVsdW4zNlh1MnR0cDVRZTVPaXQ0OU12bjJqTWdkUWorV29jc2o4YjA1anlGRnBRV1cK",
      "endpoints": [
        "https://github.com/CodeClimbersIO/ebb-app/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "icons/tray.png",
      "notifications/html/*",
      "notifications/sounds/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": ["./target/libMacMonitor.dylib"],
      "dmg": {
        "background": "./images/dmg-background.png"
      }
    },
    "createUpdaterArtifacts": true,
    "publisher": "Ebb"
  }
}
